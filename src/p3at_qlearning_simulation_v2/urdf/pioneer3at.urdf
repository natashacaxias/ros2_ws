<?xml version="1.0"?>
<!-- =================================================================================== -->
<!-- | Pioneer 3-AT URDF (corrigido para p3at_qlearning_simulation_v2)                 | -->
<!-- | CompatÃ­vel com ROS 2 Humble + Ignition Gazebo                                  | -->
<!-- =================================================================================== -->
<robot name="pioneer3at"
       xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- =================== CHASSIS =================== -->
  <link name="base_link">
    <inertial>
      <mass value="21.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="300" ixy="0" ixz="0" iyy="300" iyz="0" izz="300"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.177" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://p3at_qlearning_simulation_v2/meshes/p3at_meshes/chassis.stl"/>
      </geometry>
      <material name="ChassisRed">
        <color rgba="0.85 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.177" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://p3at_qlearning_simulation_v2/meshes/p3at_meshes/chassis.stl"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="base_link">
    <material value="Gazebo/Red"/>
  </gazebo>

  <!-- =================== TOP =================== -->
  <link name="top_plate">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://p3at_qlearning_simulation_v2/meshes/p3at_meshes/top.stl"/>
      </geometry>
      <material name="TopBlack">
        <color rgba="0.038 0.038 0.038 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="base_top_joint" type="fixed">
    <origin xyz="0.003 0 0.274" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="top_plate"/>
  </joint>

  <gazebo reference="top_plate">
    <material value="Gazebo/Black"/>
  </gazebo>

  <!-- =================== CAMERA =================== -->
  <link name="base_cam">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.02"/>
      </geometry>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0.15 0 0.33" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="base_cam"/>
  </joint>

  <gazebo reference="base_cam">
    <sensor type="camera" name="camera_sensor">
      <update_rate>30.0</update_rate>
      <camera name="main">
        <horizontal_fov>1.396</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>50.0</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <cameraName>/sim_p3at/camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>base_cam</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <!-- =================== LASER (HOKUYO) =================== -->
  <link name="hokuyo">
    <visual>
      <geometry>
        <mesh filename="package://p3at_qlearning_simulation_v2/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

  <joint name="hokuyo_joint" type="fixed">
    <origin xyz="0.15 0 0.30" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="hokuyo"/>
  </joint>

  <gazebo reference="hokuyo">
    <sensor type="ray" name="laser_sensor">
      <update_rate>40.0</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <min_angle>-2.57</min_angle>
            <max_angle>2.57</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>20.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="gazebo_ros_laser" filename="libgazebo_ros_laser.so">
        <topicName>/sim_p3at/scan</topicName>
        <frameName>hokuyo</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <!-- =================== SKID STEER DRIVE =================== -->
  <gazebo>
    <plugin name="skid_steer_drive_controller" filename="libgazebo_ros_skid_steer_drive.so">
      <updateRate>100.0</updateRate>
      <robotNamespace>sim_p3at</robotNamespace>
      <leftFrontJoint>p3at_front_left_wheel_joint</leftFrontJoint>
      <rightFrontJoint>p3at_front_right_wheel_joint</rightFrontJoint>
      <leftRearJoint>p3at_back_left_wheel_joint</leftRearJoint>
      <rightRearJoint>p3at_back_right_wheel_joint</rightRearJoint>
      <wheelSeparation>0.4</wheelSeparation>
      <wheelDiameter>0.215</wheelDiameter>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
      <publishOdomTF>true</publishOdomTF>
    </plugin>
  </gazebo>

  <!-- =================== POSE PUBLISHER =================== -->
  <gazebo>
    <plugin name="pose_publisher" filename="libgazebo_ros_p3d.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>10.0</updateRate>
      <bodyName>base_link</bodyName>
      <topicName>sim_p3at/pose</topicName>
      <frameName>map</frameName>
      <xyzOffsets>0 0 0</xyzOffsets>
      <rpyOffsets>0 0 0</rpyOffsets>
    </plugin>
  </gazebo>

</robot>
